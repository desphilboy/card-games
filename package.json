{
  "name": "card-games",
  "version": "1.0.0",
  "description": "card playing web application",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha --require babel-register src/**/**.spec.js",
    "run-dev": "./node_modules/.bin/webpack-dev-server --config ./webpack/webpack.dev.config.js",
    "clean": "rm -rf dist",
    "build-dev": "webpack --watch --config ./webpack/webpack.dev.config.js",
    "copy-static-files": "mkdir dist && mkdir dist/images && cp index.html ./dist && cp -r node_modules/svg-cards/png/* ./dist/images",
    "dev": "npm-run-all clean copy-static-files build-dev run-dev",
    "start": "npm run dev"
  },
  "keywords": [
    "mark",
    "desphil",
    "card",
    "game",
    "react"
  ],
  "author": "Desphilboy",
  "license": "ISC",
  "dependencies": {
    "less": "^3.9.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "svg-cards": "^2.0.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "devDependencies": {
    "ajv": "^6.2.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack": "^1.0.1",
    "browser-sync-webpack-plugin": "^2.2.2",
    "chai": "^4.1.2",
    "css-loader": "^0.28.10",
    "enzyme": "^3.3.0",
    "jest": "^22.4.2",
    "less-loader": "^4.1.0",
    "mocha": "^5.0.4",
    "npm-run-all": "^4.1.2",
    "style-loader": "^0.20.2"
  },
  "babel": {
    "presets": [
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "watch": {
    "test": "{src}/*.js"
  }
}
