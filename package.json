{
  "name": "card-games",
  "version": "1.0.0",
  "description": "card playing web application",
  "main": "src/index.js",
  "scripts": {
    "run:server": "webpack --watch --config ./webpack/webpack.server.dev.config.js & nodemon ./server-dist/server-bundle.js",
    "test": "jest",
    "run:client:dev": "./node_modules/.bin/webpack-dev-server --config ./webpack/webpack.dev.config.js",
    "clean": "rm -rf dist",
    "build-dev": "webpack --watch --config ./webpack/webpack.dev.config.js",
    "copy-static-files": "mkdir dist && mkdir dist/images && cp index.html ./dist && cp -r node_modules/svg-cards/png/* ./dist/images",
    "dev": "npm-run-all clean copy-static-files build-dev run-dev",
    "start": "npm run dev"
  },
  "keywords": [
    "mark",
    "desphil",
    "card",
    "game",
    "react"
  ],
  "author": "Desphilboy",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "svg-cards": "^2.0.2"
  },
  "devDependencies": {
    "ajv": "^6.2.1",
    "babel-cli": "7.0.0-beta.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "browser-sync": "^2.23.6",
    "browser-sync-webpack": "^1.0.1",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^0.28.10",
    "enzyme": "^3.8.0",
    "jest": "^24.1.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^0.20.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  }
}
